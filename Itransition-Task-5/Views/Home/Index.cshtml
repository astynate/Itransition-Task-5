<div class="users">
    <div class="main-border-bottom">
        <div class="user">
            <span>#</span>
            <div class="line"></div>
            <span>Random ID</span>
            <div class="line"></div>
            <span>Name</span>
            <div class="line"></div>
            <span>Address</span>
            <div class="line"></div>
            <span>Phone number</span>
        </div>
    </div>
    @for (int i  =0; i < 50; i++)
    {
        <div class="user">
            <span>@((i + 1).ToString("D4"))</span>
            <div class="line"></div>
            <span>@(Guid.NewGuid().ToString().ToUpper())</span>
            <div class="line"></div>
            <span>Andreev Svyatoslav Olegovich</span>
            <div class="line"></div>
            <span>City, Street, 12</span>
            <div class="line"></div>
            <span>+375-29-135-58-29</span>
        </div>
    }
</div>